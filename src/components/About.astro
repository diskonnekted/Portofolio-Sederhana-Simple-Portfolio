---
import { getEntry } from 'astro:content';

const aboutEntry = await getEntry('about', 'data');
const about = aboutEntry?.data;

if (!about) {
  throw new Error("About data not found");
}
---

<section id="about" class="py-20 bg-slate-50 dark:bg-slate-900/50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-slate-900 dark:text-white sm:text-4xl">{about.title}</h2>
      <p class="mt-4 text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
        {about.description}
      </p>
    </div>

    <div class="flex flex-col md:flex-row items-center gap-12">
      <div class="flex-1">
        <h3 class="text-2xl font-bold text-slate-800 dark:text-slate-100 mb-4">
          Driving Innovation with Code & Data
        </h3>
        <p class="text-slate-600 dark:text-slate-300 mb-6 leading-relaxed">
          {about.longDescription1}
        </p>
        <p class="text-slate-600 dark:text-slate-300 mb-6 leading-relaxed">
          {about.longDescription2}
        </p>
      </div>
      
      <div class="flex-1 grid grid-cols-2 gap-4">
        <div class="p-6 bg-white dark:bg-slate-800 rounded-xl shadow-md hover:shadow-lg transition-shadow border border-slate-100 dark:border-slate-700">
          <span class="block text-4xl font-bold text-emerald-500 mb-2">{about.yearsExperience}</span>
          <span class="text-slate-600 dark:text-slate-400 font-medium">Years Experience</span>
        </div>
        <div class="p-6 bg-white dark:bg-slate-800 rounded-xl shadow-md hover:shadow-lg transition-shadow border border-slate-100 dark:border-slate-700">
          <span class="block text-4xl font-bold text-blue-500 mb-2">{about.projectsCompleted}</span>
          <span class="text-slate-600 dark:text-slate-400 font-medium">Projects Completed</span>
        </div>
        <div class="p-6 bg-white dark:bg-slate-800 rounded-xl shadow-md hover:shadow-lg transition-shadow border border-slate-100 dark:border-slate-700">
          <span class="block text-4xl font-bold text-purple-500 mb-2">{about.commitment}</span>
          <span class="text-slate-600 dark:text-slate-400 font-medium">Commitment</span>
        </div>
        <div class="p-6 bg-white dark:bg-slate-800 rounded-xl shadow-md hover:shadow-lg transition-shadow border border-slate-100 dark:border-slate-700">
          <span class="block text-4xl font-bold text-orange-500 mb-2">{about.support}</span>
          <span class="text-slate-600 dark:text-slate-400 font-medium">Support</span>
        </div>
      </div>
    </div>
  </div>
</section>
