---
import { Icon } from 'astro-icon/components';
import { getCollection } from 'astro:content';

const skills = await getCollection('skills');

// Group skills by category
const categories = ['Device', 'Connectivity', 'Backend', 'Frontend', 'Other'];
const groupedSkills = categories.reduce((acc, category) => {
  const categorySkills = skills.filter(skill => skill.data.category === category);
  if (categorySkills.length > 0) {
    acc[category] = categorySkills;
  }
  return acc;
}, {} as Record<string, typeof skills>);
---

<section id="skills" class="py-20 bg-slate-50 dark:bg-slate-900/50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-slate-900 dark:text-white sm:text-4xl">Technical Skills</h2>
      <p class="mt-4 text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
        Tools and technologies I use to build high-performance applications.
      </p>
    </div>

    <div class="space-y-12">
      {Object.entries(groupedSkills).map(([category, categorySkills]) => (
        <div>
          <h3 class="text-2xl font-semibold text-slate-800 dark:text-slate-200 mb-6 border-l-4 border-emerald-500 pl-4">
            {category}
          </h3>
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-8">
            {categorySkills.map((skillEntry) => {
              const skill = skillEntry.data;
              return (
                <div class="group flex flex-col items-center justify-center p-6 bg-white dark:bg-slate-800 rounded-xl hover:bg-slate-50 dark:hover:bg-slate-700 hover:shadow-xl transition-all duration-300 border border-transparent hover:border-slate-200 dark:hover:border-slate-600 transform hover:-translate-y-1">
                  <Icon name={skill.icon} class={`w-12 h-12 mb-4 ${skill.color} transition-transform group-hover:scale-110 duration-300`} />
                  <span class="text-lg font-medium text-slate-700 dark:text-slate-200 group-hover:text-slate-900 dark:group-hover:text-white transition-colors">{skill.name}</span>
                </div>
              );
            })}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
